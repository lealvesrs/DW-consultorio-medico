{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{ title }}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-body">
        <div>
          <div style="margin-bottom: 15px;">
            <a href="/pacientes/InsertPacientes" class="btn btn-brown">
              Inserir novo paciente
            </a>
          </div>

          <div>
            <table id="tabPacientes" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>ID</th>
                  <th>Nome</th>
                  <th>CPF</th>
                  <th>Telefone</th>
                  <th>Endereço</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      <a href="/pacientes/ViewPacientes/{{ reg.paciente_id }}" title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>
                      <a href="/pacientes/UpdatePacientes/{{ reg.paciente_id }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{ reg.paciente_id }}</td>
                    <td>{{ reg.nome }}</td>
                    <td>{{ reg.cpf }}</td>
                    <td>{{ reg.telefone }}</td>
                    <td>{{ reg.endereco }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      const localErro = "{{ erro }}";
      if (localErro != "") {
        alert("[vwManutPacientes|onload] Servidor retornou o erro: " + localErro);
      }
      new DataTable('#tabPacientes');
    };
  </script>

{% endblock %}
