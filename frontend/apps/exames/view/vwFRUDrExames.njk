{% extends "templates/base.html" %}

{% block content %}
  <div x-data="exameForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{title}}</li>
    </ol>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card-body">
          <form>
            <div class="row">
              

            <div class="col-10">
              <div class="form-group">
                <label for="descricao">Nome</label>
                <input type="text" class="form-control" id="nome" x-model="form.nome" :disabled="disabled">
              </div>
            </div>
              <div class="col-10">
                <div class="form-group">
                  <label for="descricao">Descrição</label>
                  <input type="text" class="form-control" id="descricao" x-model="form.descricao" :disabled="disabled">
                </div>
              </div>

              <div class="col-2">
                <div class="form-group">
                    <label for="exame_id">Código</label>
                    <input type="text" class="form-control" id="exame_id" x-model="form.exame_id" disabled>
                </div>
              </div>

                            <div class="col-md-6">
                <div class="form-group">
                  <label for="valor">Valor (R$)</label>
                  <input type="number" step="0.01" class="form-control" id="valor" x-model="form.valor" :disabled="disabled">
                </div>
              </div>

            </div>
          
            <button type="button" @click="updateForm()" class="btn btn-brown mt-4" x-show="!disabled">Salvar</button>
            <button type="button" @click="deleteForm()" x-show="!disabled" class="btn btn-danger mt-4">Excluir</button>
            <a href="/exames/manutExames" class="btn btn-info mt-4 ml-2" role="button" aria-disabled="true">Retornar</a>
          </form>

          <div class="mt-3">
            <template x-if="message">
              <div :class="messageClass" x-text="message"></div>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      windowOnLoad();
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwExames|onload]Servidor retornou o erro:" + localErro);
      }
      $("#descricao").focus();
    };

    function exameForm() {
      return {
        form: {
          exame_id: "{{data.exame_id }}",
          nome: "{{data.nome}}",
          descricao: "{{data.descricao}}",
          valor: "{{data.valor}}",
          removido: false
        },
        message: '',
        messageClass: '',
        disabled: {{disabled}},

        async updateForm() {
          try {
            const response = await fetch('/exames/UpdateExames', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Exame atualizado com sucesso!");
            } else {
              // Usa result.msg se disponível, ou result.status como fallback
              const errorData = result.msg || result.status; 
              this.message = `Erro ao atualizar Exame: ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        async deleteForm() {
          try {
            const response = await fetch('/exames/DeleteExames', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Exame excluído com sucesso!");
              window.location.href = "/exames/manutExames";
            } else {
              // Usa result.msg se disponível, ou result.status como fallback
              const errorData = result.msg || result.status; 
              this.message = `Erro ao excluir a Exame : ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        }
      };
    }
  </script>
{% endblock %}
