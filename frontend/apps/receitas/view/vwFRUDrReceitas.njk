{% extends "templates/base.html" %}

{% block content %}
  <div x-data="receitaPagarForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{title}}</li>
    </ol>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card-body">
          <form>
            <div class="row">


              <div class="col-12">
                <div class="form-group">
                  <label for="descricao">Descrição</label>
                  <textarea rows="5" class="form-control" id="descricao" x-model="form.descricao" :disabled="disabled"></textarea>
                </div>
              </div>

             
              <div class="col-12">
                <div class="form-group">
                  <label for="paciente_id">Paciente</label>
                  <select class="form-select" id="paciente_id" x-model="form.paciente_id" :disabled="disabled">
                    {% for forn in paciente %}
                      <option value="{{forn.id}}" {% if data.paciente_id == forn.id %}selected{% endif %}>
                        {{forn.nome}}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              </div>

               <div class="col-6">
                <div class="form-group">
                    <label for="receita_id">Código da Receita</label>
                    <input type="text" class="form-control" id="receita_id" x-model="form.receita_id" disabled>
                </div>
              </div>

         
              <div class="col-md-6">
                <div class="form-group">
                  <label for="valor_total">Valor Total (R$)</label>
                  <input type="number" step="0.01" class="form-control" id="valor_total" x-model="form.valor_total" :disabled="disabled">
                </div>
              </div>

            </div>
          
            <button type="button" @click="updateForm()" class="btn btn-brown mt-4" x-show="!disabled">Salvar</button>
            <button type="button" @click="deleteForm()" x-show="!disabled" class="btn btn-danger mt-4">Excluir</button>
            <a href="/receitas/manutReceitas" class="btn btn-info mt-4 ml-2" role="button" aria-disabled="true">Retornar</a>
          </form>

          <div class="mt-3">
            <template x-if="message">
              <div :class="messageClass" x-text="message"></div>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/locale/pt-br.min.js"></script>

  <script>
    window.onload = function () {
      windowOnLoad();
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwReceitas|onload]Servidor retornou o erro:" + localErro);
      }
      $("#descricao").focus();
    };

    function receitaPagarForm() {
      return {
        form: {
          receita_id: "{{data.receita_id }}",
          paciente_id: "{{data.paciente_id}}",
          descricao: "{{data.descricao}}",
          valor_total: "{{data.valor_total}}",
          data_emissao: moment().format("YYYY-MM-DD HH:mm:ss"),
          removido: false
        },
        message: '',
        messageClass: '',
        disabled: {{disabled}},

        async updateForm() {
          try {
            this.form.data_emissao = moment().format("YYYY-MM-DDTHH:mm:ss")

            const response = await fetch('/receitas/UpdateReceitas', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Receita  atualizada com sucesso!");
            } else {
              // Usa result.msg se disponível, ou result.status como fallback
              const errorData = result.msg || result.status; 
              this.message = `Erro ao atualizar a Receita : ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        async deleteForm() {
          try {
            const response = await fetch('/receitas/DeleteReceitas', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Receita  excluída com sucesso!");
              window.location.href = "/receitas/manutReceitas";
            } else {
              // Usa result.msg se disponível, ou result.status como fallback
              const errorData = result.msg || result.status; 
              this.message = `Erro ao excluir a Receita : ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        }
      };
    }
  </script>
{% endblock %}
