{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/receitas/insertReceitas" class="btn btn-brown">
              Inserir nova receita 
            </a>
          </div>

          <div style="background-color: #cef5f3">
            <table id="tabReceitas" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th> 
                  <th>ID</th>
                  <th>Descrição</th>
                  <th>Valor Total</th>
                  <th>Data de Emissão</th>
                  <th>Paciente ID</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      {# Link para visualização dos dados #}
                      <a href="/receitas/ViewReceitas/{{ reg.receita_id }}"  title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>

                      {# Link para atualização e remoção dos dados#}
                      <a href="/receitas/UpdateReceitas/{{ reg.receita_id }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{reg.receita_id}}</td>
                    <td>{{reg.descricao}}</td>
                    <td>{{reg.valor_total}}</td>
                    <td>
                        {{ reg.data_emissao }}
                    </td>
                    <td>{{reg.paciente_id}}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();
      //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwReceitas|onload]Servidor retornou o erro:" + localErro);
      }

      new DataTable('#tabReceitas');
    };
  </script>

{% endblock %}