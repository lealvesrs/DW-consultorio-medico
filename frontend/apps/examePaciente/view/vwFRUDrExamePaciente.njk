{% extends "templates/base.html" %}

{% block content %}
  <div x-data="examePacienteForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{title}}</li>
    </ol>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card-body">
          <form>
            <div class="row">


              <div class="col-12">
                <div class="form-group">
                  <label for="laudo">Laudo</label>
                  <textarea rows="5" class="form-control" id="laudo" x-model="form.laudo" :disabled="disabled"></textarea>
                </div>
              </div>

             
              <div class="col-12">
                <div class="form-group">
                  <label for="paciente_id">Paciente</label>
                  <select class="form-select" id="paciente_id" x-model="form.paciente_id" :disabled="disabled">
                    {% for pac in paciente %}
                      <option value="{{pac.paciente_id}}" {% if data.paciente_id == pac.paciente_id %}selected{% endif %}>
                        {{pac.nome}}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              </div>


               <div class="col-12">
                <div class="form-group">
                  <label for="exame_id">Exames</label>
                  <select class="form-select" id="exame_id" x-model="form.exame_id" :disabled="disabled">
                    {% for ex in exame %}
                      <option value="{{ex.exame_id}}" {% if data.exame_id == ex.exame_id %}selected{% endif %}>
                        {{ex.nome}}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              </div>

               <div class="col-6">
                <div class="form-group">
                    <label for="exame_paciente_id">Código Exame-Paciente</label>
                    <input type="text" class="form-control" id="exame_paciente_id" x-model="form.exame_paciente_id" disabled>
                </div>
              </div>

         
              <div class="col-md-6">
                <div class="form-group">
                  <label for="data_exame">Data do Exame</label>
                  <input type="datetime-local" class="form-control" id="data_exame" x-model="form.data_exame" :disabled="disabled">
                </div>
              </div>

            </div>
          
            <button type="button" @click="updateForm()" class="btn btn-brown mt-4" x-show="!disabled">Salvar</button>
            <button type="button" @click="deleteForm()" x-show="!disabled" class="btn btn-danger mt-4">Excluir</button>
            <a href="/examePaciente/manutExamePaciente" class="btn btn-info mt-4 ml-2" role="button" aria-disabled="true">Retornar</a>
          </form>

          <div class="mt-3">
            <template x-if="message">
              <div :class="messageClass" x-text="message"></div>
            </template>
          </div>
        </div>
      </div>
    </div>
  </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/locale/pt-br.min.js"></script>

  <script>
    window.onload = function () {
      windowOnLoad();
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwExamePaciente|onload]Servidor retornou o erro:" + localErro);
      }
      $("#laudo").focus();
    };

    function examePacienteForm() {
      return {
        form: {
          exame_paciente_id: "{{data.exame_paciente_id }}",
          paciente_id: "{{data.paciente_id}}",
          laudo: "{{data.laudo}}",
          exame_id: "{{data.exame_id}}",
          data_exame: "{{data.data_exame}}",
          removido: false
        },
        message: '',
        messageClass: '',
        disabled: {{disabled}},

        async updateForm() {
          try {

            const response = await fetch('/examePaciente/UpdateExamePaciente', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Exames Realizados atualizado com sucesso!");
            } else {
              // Usa result.msg se disponível, ou result.status como fallback
              const errorData = result.msg || result.status; 
              this.message = `Erro ao atualizar Exames Realizados: ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        async deleteForm() {
          try {
            const response = await fetch('/examePaciente/DeleteExamePaciente', {
              method: 'POST',
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Exames Realizados excluído com sucesso!");
              window.location.href = "/examePaciente/manutExamePaciente";
            } else {
              // Usa result.msg se disponível, ou result.status como fallback
              const errorData = result.msg || result.status; 
              this.message = `Erro ao excluir Exames Realizados: ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        }
      };
    }
  </script>
{% endblock %}
